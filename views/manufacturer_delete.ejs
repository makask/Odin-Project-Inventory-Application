<%- include('partials/header.ejs'); -%>

<h1><%= title %>: <%= manufacturer.name %></h1>

<% if (manufacturer_products.length) { %>
    <p><strong>Delete the following products before attempting to delete this manufacturer.</strong></p>
    <div style='margin-left:20px;margin-top:20px'>
      <h4>Products</h4>
      <dl>
        <% manufacturer_products.forEach(function(product) { %>
            <div style="display: flex; align-items: center; gap:1rem;">
                <img style="width: 100px;" src="<%= product.pic_url %>"/>
                <a><%= product.title%></a>
                <p><a href="<%= product.url %>/delete">Delete Product</a></p>
            </div>         
        <% }); %>
      </dl>
    </div>
  <% } else { %>
    <p>Do you really want to delete this Manufacturer?</p>
    <form method='POST'>
      <div class="form-group">
        <input id="authorid" class="form-control" type="hidden" name="manufacturerid" value="<%= manufacturer._id %>">
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
  <% } %>

</div>
</div>
</body>
</html>